{
  "name": "pzbotz",
  "version": "1.0.0",
  "description": "Project Zomboid Server Management Suite",
  "main": "src/app.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "tsc && electron-builder",
    "build:dev": "tsc --sourceMap",
    "build:prod": "tsc --sourceMap false",
    "test": "jest --config jest.config.js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint 'src/**/*.{js,ts,tsx}'",
    "lint:fix": "eslint 'src/**/*.{js,ts,tsx}' --fix",
    "type-check": "tsc --noEmit",
    "setup": "node scripts/setup.js",
    "format": "prettier --write 'src/**/*.{ts,tsx}'",
    "format:check": "prettier --check 'src/**/*.{ts,tsx}'"
  },
  "dependencies": {
    "@mantine/core": "^7.0.0",
    "@mantine/hooks": "^7.0.0",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "axios": "^1.6.5",
    "chart.js": "^4.4.1",
    "chartjs-node-canvas": "^4.1.6",
    "discord.js": "^14.14.1",
    "dotenv": "^16.3.1",
    "electron": "^28.1.3",
    "electron-builder": "^24.9.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "fs-extra": "^11.2.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "node-cache": "^5.1.2",
    "node-cron": "^3.0.3",
    "node-schedule": "^2.1.1",
    "pg": "^8.11.3",
    "rate-limiter-flexible": "^5.0.0",
    "rcon-client": "^4.2.5",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.2.0",
    "redis": "^4.6.12",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@babel/preset-env": "^7.23.7",
    "@jest/globals": "^29.7.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3",
    "@types/express": "^4.17.21",
    "@types/ws": "^8.5.10",
    "@types/node-schedule": "^2.1.5",
    "prettier": "^3.1.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react-hooks": "^4.6.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "type": "module",
  "author": "yourusername",
  "license": "MIT",
  "bin": {
    "pzbotz": "index.js"
  },
  "pkg": {
    "scripts": [
      "bot.js",
      "index.js"
    ],
    "assets": [
      "config.json",
      "bot_token.txt",
      "user_points.json",
      "user_tickets.json",
      "linked_accounts.json",
      "shop_items.json"
    ]
  },
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/pzbotz.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/pzbotz/issues"
  },
  "keywords": [
    "project-zomboid",
    "server-management",
    "discord-bot",
    "game-server",
    "rcon"
  ],
  "homepage": "https://github.com/yourusername/pzbotz#readme",
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
    "roots": ["<rootDir>/src"],
    "testMatch": ["**/__tests__/**/*.ts?(x)", "**/?(*.)+(spec|test).ts?(x)"],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts"
    ]
  }
}
